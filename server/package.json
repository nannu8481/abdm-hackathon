{
  "name": "microservice-backend",
  "version": "1.0.0",
  "description": "microservice backend",
  "main": "index.js",
  "scripts": {
    "tsoa:swagger": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa:swagger:dist": "tsoa swagger -c tsoa-dist.json",
    "build": "npm run tsoa:routes && npm run tsoa:swagger && npm run tsc && npm run tsoa:swagger:dist",
    "tsc": "tsc",
    "start": "./bin/start",
    "start:prod": "node ./dist/index.js",
    "start:dev": "npm run tsoa:routes && npm run tsoa:swagger && ts-node src/index.ts",
    "dev": "nodemon --exec 'npm run start:dev' | pino-pretty",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run build && npm run test:only",
    "test:only": "jest"
  },
  "author": "Abhijeet",
  "license": "ISC",
  "dependencies": {
    "@affinidi/wallet-node-sdk": "^6.4.0",
    "axios": "^0.27.2",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "express-pino-logger": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.4",
    "pino": "^7.6.4",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.4.0",
    "tsoa": "^3.14.1",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.45",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.0",
    "typescript": "^4.3.5"
  }
}
